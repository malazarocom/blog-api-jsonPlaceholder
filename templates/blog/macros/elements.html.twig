{# CARD ----------------------------------------------------------------------------------------------------------------- #}

{% macro card_article(article) %}
    <div class="card">
        <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
            <img src="https://mdbootstrap.com/img/new/standard/nature/184.jpg" class="img-fluid">
            <a href="#!">
                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
            </a>
        </div>
        <div class="card-body">
            <h5 class="card-title" title="{{article.title}}">{{article.title|getExcerpt(25)}}</h5>
            <p class="card-text">
                {{article.body|getExcerpt()}}
            </p>
            <button class="btn btn-primary" data-action="click->index#launchModal"
                data-title="{{article.title}}"
                data-body="{{article.body}}"
                data-name="{{article.author.name}}"
                data-username="{{article.author.username}}"
                data-email="{{article.author.email}}"
                data-phone="{{article.author.phone}}"
                data-website="{{article.author.website}}"
            >
                Leer
            </button>
        </div>
    </div>
{% endmacro %}